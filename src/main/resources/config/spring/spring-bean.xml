<beans xmlns="http://www.springframework.org/schema/beans"  
 xmlns:context="http://www.springframework.org/schema/context"  
 xmlns:p="http://www.springframework.org/schema/p"  
 xmlns:mvc="http://www.springframework.org/schema/mvc"  
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
 xsi:schemaLocation="http://www.springframework.org/schema/beans  
      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd  
      http://www.springframework.org/schema/context  
      http://www.springframework.org/schema/context/spring-context.xsd  
      http://www.springframework.org/schema/mvc  
      http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd">
     
     <!-- 父级bean 不进行实例化 -->
     <bean id="baseInstrumentalist" class="kino.spring.test.model.Instrumentalist" abstract="true">
     	<property name="song" value="Jingle Bells"></property>
     	<property name="instrument" value="guitar"></property>
     </bean>
     <!-- 直接继承 -->
     <bean id="jimmy" parent="baseInstrumentalist"></bean>
     <!-- 覆盖歌曲 -->
     <bean id="tommy" parent="baseInstrumentalist">
     	<property name="song" value="The Second Love"></property>
     </bean>
     
     <!-- 抽象属性 -->
     <bean id="abstractSong" abstract="true">
     	<property name="song" value="shalalala"></property>
     </bean>
     <bean id="wendy" class="kino.spring.test.model.Instrumentalist" parent="abstractSong">
     	<property name="instrument" value="Drum kit"></property>
     </bean>
     
     <!-- 基本方法注入 -->
     <bean id="magicBoxReplace" class="kino.spring.test.model.MagicBoxReplace"></bean>
     <bean id="magicBoxTangTang" class="kino.spring.test.model.MagicBox">
     	<replaced-method name="getContext" replacer="magicBoxReplace"></replaced-method>
     </bean>
     <bean id="magician" class="kino.spring.test.model.Magician">
     	<property name="magicBox" ref="magicBoxTangTang"></property>
     </bean>
</beans> 